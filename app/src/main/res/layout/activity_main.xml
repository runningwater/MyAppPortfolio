<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="25sp"
        android:layout_marginTop="20sp"
        android:text="@string/app_port"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="30sp"
        android:textStyle="normal|bold"/>

    <Button
        android:id="@+id/btn_films"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#2E3D49"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/text_films"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="normal|bold"/>

    <Button
        android:id="@+id/btn_stock"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#2E3D49"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/text_stock"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="normal|bold"/>

    <Button
        android:id="@+id/btn_reader"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#2E3D49"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/text_reader"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="normal|bold"/>

    <Button
        android:id="@+id/btn_news"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#2E3D49"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="@string/text_news"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="normal|bold"/>

    <Button
        android:id="@+id/btn_design"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#2E3D49"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/gradua_design"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="normal|bold"/>

</LinearLayout>
